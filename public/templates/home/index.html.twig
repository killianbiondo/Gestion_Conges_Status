{# templates/home/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            background: #f4f7f6;
            color: #333;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .example-wrapper {
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            max-width: 500px;
            text-align: center;
        }

        h1 {
            color: #2c3e50;
            font-size: 24px;
            margin-bottom: 10px;
        }

        h2 {
            color: #34495e;
            font-size: 20px;
            margin-top: 20px;
        }

        p {
            font-size: 16px;
            color: #7f8c8d;
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            margin: 10px 0;
        }

        a {
            text-decoration: none;
            color: #3498db;
            font-weight: bold;
            transition: color 0.3s ease;
        }

        a:hover {
            color: #1abc9c;
        }
    </style>

    <div class="example-wrapper">
        <h1>Hello {{ controller_name }}! ✅</h1>

        <p>Cette page gère les accès aux congés des utilisateurs.</p>

        <h2>Liens d'accès</h2>
        <ul>
            <li><a href="{{ path('user') }}">User</a></li>
            <li><a href="{{ path('conge') }}">Conge</a></li>
        </ul>
    </div>

{% endblock %}
