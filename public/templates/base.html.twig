{# templates/base.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Bienvenue!{% endblock %}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="icon" href="{{ asset('gestion_Conges_favicon.ico') }}" type="image/x-icon">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: #f4f7f6;
            color: #333;
        }
        .navbar {
            background: #2c3e50 !important;
            padding: 15px;
        }
        .navbar-brand, .nav-link {
            color: #ecf0f1 !important;
            font-weight: bold;
            transition: color 0.3s ease;
        }
        .nav-link:hover {
            color: #1abc9c !important;
        }
        .container {
            margin-top: 30px;
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
    </style>

    {% block stylesheets %}{% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark">
    <a class="navbar-brand" href="{{ path('app_home') }}">Mon Application</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_stats') }}">Statistiques</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_stats_user') }}">Statistiques Utilisateur</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('user') }}">Utilisateurs</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('conge') }}">Congés</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('conge_create') }}">Créer un congé</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('stats_team_calendar') }}">Vue calendrier</a>
            </li>
        </ul>
    </div>
</nav>

<div class="container mt-4">
    {% block body %}{% endblock %}
</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
{% block javascripts %}{% endblock %}
</body>
</html>
