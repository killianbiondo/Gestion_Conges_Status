{% extends 'base.html.twig' %}

{% block title %}Liste des congés{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Liste des congés</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        <div class="mb-3 text-end">
            <a href="{{ path('conge_create') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Créer un congé
            </a>
        </div>

        {% if userConges is not empty %}
            <div class="card mb-3">
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        {% for conge in userConges %}
                            <li class="list-group-item">
                                <strong>Utilisateur:</strong> {{ conge.user.nom }} {{ conge.user.prenom }}<br>
                                <strong>Type:</strong> {{ conge.type }}<br>
                                <strong>Date de début:</strong> {{ conge.dateDebut|date('d/m/Y') }}<br>
                                <strong>Date de fin:</strong> {{ conge.dateFin|date('d/m/Y') }}<br>
                                <strong>Statut:</strong>
                                {% if conge.statut == 'En attente' %}
                                    <span class="badge bg-warning text-dark">En attente</span>
                                {% elseif conge.statut == 'Approuvé' %}
                                    <span class="badge bg-success">Approuvé</span>
                                {% else %}
                                    <span class="badge bg-danger">Refusé</span>
                                {% endif %}

                                <div class="mt-2">
                                    <a href="{{ path('conge_approve', {id: conge.id}) }}"
                                       class="btn btn-success btn-sm {% if conge.statut == 'Approuvé' %}disabled{% endif %}">
                                        Approuver
                                    </a>

                                    <a href="{{ path('conge_reject', {id: conge.id}) }}"
                                       class="btn btn-danger btn-sm {% if conge.statut == 'Refusé' %}disabled{% endif %}">
                                        Refuser
                                    </a>

                                    <a href="{{ path('conge_set_pending', {id: conge.id}) }}"
                                       class="btn btn-secondary btn-sm {% if conge.statut == 'En attente' %}disabled{% endif %}">
                                        Remettre en attente
                                    </a>
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% else %}
            <div class="alert alert-warning text-center" role="alert">
                Aucun congé trouvé.
            </div>
        {% endif %}
    </div>
{% endblock %}
