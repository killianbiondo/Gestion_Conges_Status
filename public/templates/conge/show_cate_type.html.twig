{% extends 'base.html.twig' %}

{% block title %}Liste des congés{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Liste des congés</h1>

        {% if userConges is not empty %}
            <div class="card mb-3">
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        {% for userConge in userConges %}
                            <li>
                                <strong>Utilisateur:</strong> {{ userConge.user.nom }} {{ userConge.user.prenom }}<br>
                                <strong>Type:</strong> {{ userConge.type }}<br>
                                <strong>Date de début:</strong> {{ userConge.dateDebut|date('d/m/Y') }}<br>
                                <strong>Date de fin:</strong> {{ userConge.dateFin|date('d/m/Y') }}<br>
                                <strong>Statut:</strong> {{ userConge.statut }}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% else %}
            <div class="alert alert-warning text-center" role="alert">
                Aucun congé trouvé.
            </div>
        {% endif %}
    </div>
{% endblock %}